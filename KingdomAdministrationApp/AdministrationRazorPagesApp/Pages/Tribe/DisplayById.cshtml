@page
@model AdministrationRazorPagesApp.Pages.Tribe.DisplayByIdModel
@{
    ViewData["Title"] = "DisplayById";
}

<h1>Tribe</h1>

@if (Model.Tribe is null)
{
    <h2>The requested record was not found.</h2>
}
else
{
    <table class="table">
        <tbody>
            <tr>
                <td class="font-weight-bold">Type</td>
                <td>@Model.Tribe.Name</td>
            </tr>
            <tr>
                <td class="font-weight-bold">Magical Value</td>
                <td>@Model.Tribe.ExistSince</td>
            </tr>
            <tr>
                <td class="font-weight-bold">Owner</td>
                <td>@Model.LeaderName.</td>
            </tr>
            <tr>
                <td colspan="2">
                    <a asp-page="./Delete" asp-route-id="@Model.Tribe.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>


    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="UpdateModel.Id" value="@Model.Tribe.Id" type="hidden" />
        <div class="form-group">
            <label asp-for="UpdateModel.Name" class="control-label"></label>
            <input asp-for="UpdateModel.Name" value="@Model.Tribe.Name" class="form-control" />
            <span asp-validation-for="UpdateModel.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
}