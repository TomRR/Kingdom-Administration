@page
@model AdministrationRazorPagesApp.Pages.Citizen.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model.Citizen is null)
{
    <h2>The requested record was not found</h2>
}
else
{
    <div class="h4">
        Are you sure you want to delete the citizen @Model.Citizen.Name?
    </div>
    <form method="post">
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <div class="form-group">
            <input type="submit" value="Delete Citizen" class="btn btn-danger" />
        </div>
    </form>
}